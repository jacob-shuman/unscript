{
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": false
    },
    "exclude": [
        "dist"
    ]
}